  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.1",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.17.4",
    "pg-promise": "^8.4.3"
  }
